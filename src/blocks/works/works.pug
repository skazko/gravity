- var cases= ['all', 'branding', 'web', 'development', 'films']
- var jobs= ['img/w1.jpg', 'img/w2.jpg', 'img/w3.jpg', 'img/w4.jpg', 'img/w5.jpg', 'img/w6.jpg']
mixin works
  +b.SECTION.works
    +e.container
      +e.label
          +label('Our works')
      +e.row
        +b.H2.section-title Discover our Work
        +b.switcher
          each val, index in cases 
            if index == 0
              +e.INPUT.item(type="radio", name="switcher", id="switcher__"+ val, checked)
              +e.LABEL.label(for="switcher__"+ val)= val
            else
              +e.INPUT.item(type="radio", name="switcher", id="switcher__"+ val)
              +e.LABEL.label(for="switcher__"+ val)= val
      +e.samples
        +b.UL.samples
          each job, index in jobs
            if index != 2
              +e.LI.item
                img(src= job, alt="Job")
            else
              +e.LI.item(style="position: relative; line-height: 0")
                +overlay
                video(width="350", height="450", poster= job)
      +e.footer
        +e.footer-text
          p.text It picks up the words on the page and displays ads that are similar to those words. Then when someone either performs an action or clicks on your page you will get paid.
        +e.footer-button
          +button('see our works')

          


